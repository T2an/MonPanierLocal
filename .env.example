# ============================================
# Configuration Mon Panier Local
# ============================================
# Copiez ce fichier vers .env et configurez vos valeurs
# IMPORTANT: Ne commitez jamais le fichier .env dans Git !

# ============================================
# Base de données PostgreSQL
# ============================================
DB_NAME=monpanierlocal
DB_USER=postgres
DB_PASSWORD=CHANGEZ_MOI_AVEC_UN_MOT_DE_PASSE_FORT
DB_HOST=db
DB_PORT=5432

# ============================================
# Configuration Django
# ============================================
# Générez une clé secrète avec: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production-GÉNÉREZ-UNE-VRAIE-CLÉ-SECRÈTE
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=INFO

# ============================================
# Configuration Frontend (Next.js)
# ============================================
# URL de l'API backend (utilisé par le frontend)
# En production derrière nginx, utilisez simplement /api
NEXT_PUBLIC_API_URL=/api

# ============================================
# Configuration Nginx
# ============================================
# Ports disponibles pour le déploiement: 3500-3600
NGINX_HTTP_PORT=3500
# Décommentez pour activer HTTPS (nécessite des certificats SSL dans infra/nginx/ssl/)
# NGINX_HTTPS_PORT=3501

# ============================================
# Configuration Upload (optionnel)
# ============================================
# Taille maximale d'upload en MB (défaut: 10)
MAX_UPLOAD_SIZE_MB=10
# Extensions d'images autorisées (défaut: jpg,jpeg,png,webp)
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

